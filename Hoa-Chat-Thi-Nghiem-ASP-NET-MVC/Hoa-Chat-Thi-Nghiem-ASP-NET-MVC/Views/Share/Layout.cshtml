    List<TypeProduct> dsDungcu = Session["dungcu"] as List<TypeProduct>;
    List<TypeProduct> dsThietbi = Session["thietbi"] as List<TypeProduct>;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Assets/shop/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Assets/shop/css/magnific-popup.min.css" rel="stylesheet" />
    <link href="~/Assets/shop/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Assets/shop/css/jquery.fancybox.min.css" rel="stylesheet" />
    <link href="~/Assets/shop/css/themify-icons.css" rel="stylesheet" />
    <link href="~/Assets/shop/css/niceselect.css" rel="stylesheet" />
    <link href="~/Assets/shop/css/animate.css" rel="stylesheet" />
    <link href="~/Assets/shop/css/flex-slider.min.css" rel="stylesheet" />
    <link href="~/Assets/shop/css/owl-carousel.css" rel="stylesheet" />
    <link href="~/Assets/shop/css/slicknav.min.css" rel="stylesheet" />
    <link href="~/Assets/shop/css/style.css" rel="stylesheet" />
    <link href="~/Assets/shop/css/responsive.css" rel="stylesheet" />
    <link href="~/Assets/shop/css/custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />

</head>
<body>
    @{var customer = (Customer)Session["auth_customer"]; }
    <div class="preloader" style="display: none;">
        <div class="preloader-inner">
            <div class="preloader-icon">
                <span></span>
                <span></span>
            </div>
        </div>
    </div>

    <header class="header shop">
        <div class="topbar">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7 col-md-7 col-12">
                        <div class="text-left">
                            <ul>
                                <li><i class="ti-headphone-alt"></i>0983 803 100</li>
                                <li><i class="fa fa-envelope-o"></i>support@labchemicals.com</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-5 col-md-5 col-12">
                        <div class="text-right">
                            <ul>
                                @{
                                    if (customer != null)
                                    {
                                        <li>
                                            <a href="/Profile/ProfileUser"><i class="bi bi-person-plus"></i>Xin chào @customer.Fullname</a>
                                        </li>
                                        <li>
                                            <a href="/Account/Logout"><i class="bi bi-box-arrow-in-right"></i>Đăng xuất</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a href="/Account/Login"><i class="bi bi-box-arrow-in-right"></i>Đăng nhập</a>
                                        </li>
                                        <li>
                                            <a href="/Account/Register"><i class="bi bi-person-plus"></i>Đăng ký</a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ===== HEADER MIDDLE ====== -->
        <div class="header-middle py-4">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 col-md-2 col-12">
                        <!-- Logo -->
                        <div class="logo">
                            <a href="/Home/Index">
                                <img src="~/Assets/shop/images/labchemicals-logo.png" />
                            </a>
                        </div>
                        <!-- Search Mobile -->
                        <div class="mobile-search">
                            <form class="search-form">
                                <input type="text" placeholder="Tìm kiếm..." name="search">
                                <button value="search" type="submit">
                                    <i class="ti-search"></i>
                                </button>
                            </form>
                            <div>
                                <a href="#0"><i class="ti-search"></i></a>
                            </div>
                        </div>
                        <div class="mobile-nav">
                            <div class="slicknav_menu">
                                <a href="#" aria-haspopup="true" role="button" tabindex="0" class="slicknav_btn slicknav_collapsed"><span class="slicknav_menutxt"></span><span class="slicknav_icon slicknav_no-text"><span class="slicknav_icon-bar"></span><span class="slicknav_icon-bar"></span><span class="slicknav_icon-bar"></span></span></a><ul class="slicknav_nav slicknav_hidden" role="menu" aria-hidden="true" style="display: none;">

                                    <li class="position-relative mr-2 slicknav_collapsed slicknav_parent">
                                        <a href="#" role="menuitem" aria-haspopup="true" tabindex="-1" class="slicknav_item slicknav_row">
                                            <a href="@Url.Action("ListProducts", "Products", new { id = 40 })" tabindex="-1">Hóa chất<i class="ti-angle-down"></i></a>
                                            <span class="slicknav_arrow">►</span>
                                        </a><ul class="dropdown slicknav_hidden" role="menu" aria-hidden="true" style="display: none;">
                                            @foreach (TypeProduct type in dsHoachat)
                                            {
                                                <li><a href="@Url.Action("ListProducts", "Products", new { id = type.Id_type })" role="menuitem" tabindex="-1">@type.Name_type</a></li>
                                            }
                                        </ul>
                                    </li>
                                    <li class="position-relative mr-2 slicknav_collapsed slicknav_parent">
                                        <a href="#" role="menuitem" aria-haspopup="true" tabindex="-1" class="slicknav_item slicknav_row">
                                            <a href="@Url.Action("ListProducts", "Products", new { id = 50 })" tabindex="-1">Dụng cụ<i class="ti-angle-down"></i></a>
                                            <span class="slicknav_arrow">►</span>
                                        </a><ul class="dropdown slicknav_hidden" role="menu" aria-hidden="true" style="display: none;">
                                            @foreach (TypeProduct type in dsDungcu)
                                            {
                                                <li><a href="@Url.Action("ListProducts", "Products", new { id = type.Id_type })" role="menuitem" tabindex="-1">@type.Name_type</a></li>
                                            }

                                        </ul>
                                    </li>
                                    <li class="position-relative mr-2 slicknav_collapsed slicknav_parent">
                                        <a href="#" role="menuitem" aria-haspopup="true" tabindex="-1" class="slicknav_item slicknav_row">
                                            <a href="@Url.Action("ListProducts", "Products", new { id = 60 })" tabindex="-1">Thiết bị<i class="ti-angle-down"></i></a>
                                            <span class="slicknav_arrow">►</span>
                                        </a><ul class="dropdown slicknav_hidden" role="menu" aria-hidden="true" style="display: none;">
                                            @foreach (TypeProduct type in dsThietbi)
                                            {
                                                <li><a href="@Url.Action("ListProducts", "Products", new { id = type.Id_type })" role="menuitem" tabindex="-1">@type.Name_type</a></li>
                                            }

                                        </ul>
                                    </li>

                                    <li class="position-relative mr-2">
                                        <a href="/News/News" role="menuitem" tabindex="-1">Tin tức</a>
                                    </li>
                                    <li class="position-relative">
                                        <a href="/Contact/Contact" role="menuitem" tabindex="-1">Liên hệ</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8 col-md-7 col-12 pt-1">
                        <div class="search-bar-top">
                            <div class="search-bar">
                                <form>
                                    <input name="search" placeholder="Nhập tên sản phẩm.....">
                                    <button class="btn-search">
                                        <i class="ti-search"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-12">
                        <div class="right-bar">
                            <!-- Search Form -->
                            <div class="right-bar-item shopping d-inline-block mr-4">
                                @{
                                    int total = 0;
                                    var list = (List<Hoa_Chat_Thi_Nghiem_ASP_NET_MVC.Models.CartItem>)Session["CartSession"];
                                    int quantityItem = ((list == null) ? 0 : list.Count());
                                }
                                <a href="/Cart/ShoppingCart" class="single-icon"><i class="fa fa-shopping-cart"></i><span class="total-count">@quantityItem</span></a>
                                <!-- Shopping Item -->
                                <div class="shopping-item">

                                    <div class="dropdown-cart-header">
                                        <span>@((list == null)?0:quantityItem) Sản phẩm</span>
                                        <a class="float-right" href="/Cart/ShoppingCart">Xem giỏ hàng</a>
                                    </div>
                                    <ul class="shopping-list">
                                        <!-- Cart Item -->

                                        @{
                                            if (list == null)
                                            {
                                                <h1>Ko co gi</h1>
                                            }
                                            else
                                            {
                                                foreach (Hoa_Chat_Thi_Nghiem_ASP_NET_MVC.Models.CartItem item in list)
                                                {
                                                    <li>
                                                        <a href="" onclick="deleteItem(@item.Product.Id_product)" class="remove" title="Remove this item"><i class="fa fa-remove"></i></a>
                                                        <a class="cart-img" href="#"><img src="@item.Product.Url_img_product" alt="#"></a>
                                                        <h4><a href="#">@item.Product.Name_product</a></h4>
                                                        <p class="quantity">
                                                            @item.Quantity x - <span class="amount">@string.Format("{0:0,0 vnđ}", item.Product.Current_price)</span>
                                                            @{total += item.Quantity * item.Product.Current_price;}
                                                        </p>
                                                    </li>
                                                }
                                            }
                                        }


                                    </ul>
                                    <div class="bottom text-center">
                                        <div class="total">
                                            <span>Tổng cộng</span>
                                            <span class="total-amount">@string.Format("{0:0,0 vnđ}", total)</span>
                                        </div>
                                        <a href="/Checkout/Checkout" class="btn">Thanh toán</a>
                                    </div>
                                </div>
                            </div>

                            @{
                                if (customer != null)
                                {
                                    <div class="right-bar-item d-inline-block">
                                        <a href="/Profile/ProfileUser" class="single-icon"><i class="fa fa-user-circle-o" aria-hidden="true"></i></a>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ===== HEADER MENU ===== -->
        <div class="header-menu">
            <div class="container">
                <nav class="navbar navbar-expand-lg p-0">
                    <div class="navbar-collapse">
                        <ul class="nav menu navbar-nav">

                            <li class="position-relative mr-2">
                                <a href="@Url.Action("ListProducts", "Products", new {id =40})">Hóa chất<i class="ti-angle-down"></i></a>
                                <ul class="dropdown">
                                    @foreach (TypeProduct type in dsHoachat)
                                    {
                                        <li><a href="@Url.Action("ListProducts", "Products", new {id = type.Id_type})">@type.Name_type</a></li>

                                    }

                                </ul>
                            </li>
                            <li class="position-relative mr-2">
                                <a href="@Url.Action("ListProducts", "Products", new {id = 50})">Dụng cụ<i class="ti-angle-down"></i></a>
                                <ul class="dropdown">
                                    @foreach (TypeProduct type in dsDungcu)
                                    {
                                        <li><a href="@Url.Action("ListProducts", "Products", new {id = type.Id_type})">@type.Name_type</a></li>
                                    }
                                </ul>
                            </li>
                            <li class="position-relative mr-2">
                                <a href="@Url.Action("ListProducts", "Products", new {id =60})">Thiết bị<i class="ti-angle-down"></i></a>
                                <ul class="dropdown">
                                    @foreach (TypeProduct type in dsThietbi)
                                    {
                                        <li><a href="@Url.Action("ListProducts", "Products", new {id = type.Id_type})">@type.Name_type</a></li>
                                    }
                                </ul>
                            </li>

                            <li class="position-relative mr-2">
                                <a href="/News/News">Tin tức</a>
                            </li>
                            <li class="position-relative">
                                <a href="/Contact/Contact">Liên hệ</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <div>
        @RenderBody()
    </div>
    <section class="shop-services">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-12">
                    <div class="single-service">
                        <i class="ti-rocket"></i>
                        <h4>Cam kết chính hãng</h4>
                        <p>Chính hãng 100%</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-12">
                    <div class="single-service">
                        <i class="ti-reload"></i>
                        <h4>Hỗ trợ hoàn trả</h4>
                        <p>Tất cả các mặt hàng</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-12">
                    <div class="single-service">
                        <i class="ti-lock"></i>
                        <h4>Hỗ trợ kỹ thuật 24/7</h4>
                        <p>Trực tiếp hoặc trực tuyến</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-12">
                    <div class="single-service">
                        <i class="ti-tag"></i>
                        <h4>Giá thành cạnh tranh</h4>
                        <p>Giá cả hợp lý</p>
                    </div>
                </div>
